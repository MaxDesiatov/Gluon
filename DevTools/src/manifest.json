{
    "name": "Tokamak Dev Tools",
    "devtools_page": "devtools.html",
    "web_accessible_resources": [
        "main.wasm"
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "http://*/*",
        "https://*/*"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "manifest_version": 2,
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
